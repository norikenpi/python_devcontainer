{
    "name": "Python Sample",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,readonly,type=bind"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "mhutchie.git-graph",
                "GitHub.copilot"
            ]
        }
    },
    "postCreateCommand": "pip3 install beautifulsoup4 && pip3 install html5lib"
}